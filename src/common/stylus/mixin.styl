//mixin是css预处理器提供的一个方法
border-1px($color)  //一个函数，需要传入颜色的参数
  position : relative
  &:after   //？？？疑问：什么意思？
    display : block
    position : absolute
    left : 0
    bottom : 0
    width : 100%
    border-top : 1px solid $color
    content: ''

border-none()
  &:after
    display : none

//根据不同DPI用不同尺寸图片
bg-image($url)
  background-image : url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image : url($url + "@3x.png")
